<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head.ejs') %>
</head>

<body>
  <%- include('./partials/ui/nav_destktop.ejs') %>
  <section class="body">
    <%- include('./partials/ui/top_bar.ejs') %>
    <main class="main-content">
      <%- include('./partials/ui/filter_bar.ejs') %>
      <div class="section car-brands">
        <div class="section-header">
          <p class="section-name">Top Car Brands</p>
        </div>
        <div class="section brands">
          <form action="/brand" method="get" class="car-brand">
            <input type="text" name="brandName" value="audi" type="hidden" style="display: none;">
            <button type="submit" class="car-brand">
              <img src="assets/brands/audi.jpg" alt="audi">
              <p class="brand-name">Audi</p>
            </button>
          </form>
          <form action="/brand" method="get" class="car-brand">
            <input type="text" name="brandName" value="BMW" type="hidden" style="display: none;">
            <button type="submit" class="car-brand">
              <img src="assets/brands/bmw.jpg" alt="bmw">
              <p class="brand-name">BMW</p>
            </button>
          </form>
          <form action="/brand" method="get" class="car-brand">
            <input type="text" name="brandName" value="Ford" type="hidden" style="display: none;">
            <button type="submit" class="car-brand">
              <img src="assets/brands/ford.jpg" alt="ford">
              <p class="brand-name">Ford</p>
            </button>
          </form>
          <form action="/brand" method="get" class="car-brand">
            <input type="text" name="brandName" value="Honda" type="hidden" style="display: none;">
            <button type="submit" class="car-brand">
              <img src="assets/brands/honda.jpg" alt="honda">
              <p class="brand-name">Honda</p>
            </button>
          </form>

          <form action="/brand" method="get" class="car-brand">
            <input type="text" name="brandName" value="Hyundai" type="hidden" style="display: none;">
            <button type="submit" class="car-brand">
              <img src="assets/brands/hyundai.jpg" alt="hyundai">
              <p class="brand-name">Hyundai</p>
            </button>
          </form>

          <form action="/brand" method="get" class="car-brand">
            <input type="text" name="brandName" value="Toyota" type="hidden" style="display: none;">
            <button type="submit" class="car-brand">
              <img src="assets/brands/toyota.jpg" alt="toyota">
              <p class="brand-name">Toyota</p>
            </button>
          </form>
        </div>
      </div>
      <div class="section resent-cars">
        <div class="section-header">
          <p class="section-name">Resent Cars</p>
          <a href="">View All</a>
        </div>
        <div class="cars">
          <% if (cars.length > 0) { %>
          <% for( let index = 0; index < 10; index++ ) { %>
          <div class="car">
            <img src="<%=`data:image/webp;base64,${cars[index].data}`%>" alt="car image" class="car-image">
            <div class="car-description">
              <div class="car-details">
                <p class="car-name"><%=`${cars[index].brand} ${cars[index].name}`%></p>
                <span class="car-location">
                  <img src="assets/location.svg" alt="car location">
                  <p class="location-name"> Koforidua</p>
                </span>
              </div>
              <div class="car-rating">
                <span class="rating">
                  <img src="assets/rating.svg" alt="">
                  <img src="assets/rating.svg" alt="">
                  <img src="assets/rating.svg" alt="">
                  <img src="assets/rating.svg" alt="">
                  <img src="assets/rating.svg" alt="">
                </span>
                5.0
              </div>
              <div class="pricing">
                <span class="price">GHC 245.00</span><span class="duration">/day</span>
              </div>
            </div>
            <div class="action">
              <button class="button button-filled">
                <a href="/car-detials" style="color:white;">View Details</a>
              </button>
              <button class="icon-button icon-button--filled">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M3.11544 8.02607C3.20159 7.50361 3.37795 6.98115 3.6104 6.47461C5.00201 3.44215 8.95827 3.37934 11.6675 5.29632C11.8671 5.43753 12.1327 5.43753 12.3323 5.29632C15.0416 3.37934 18.9979 3.44215 20.3895 6.47461C20.6219 6.98115 20.7983 7.50361 20.8844 8.02607C22.0204 14.9158 14.4678 20 11.9999 20C9.53202 20 1.98019 14.9111 3.11544 8.02607Z" stroke="#363538" stroke-width="1.5" stroke-linejoin="round" />
                </svg>
              </button>
            </div>
          </div>
          <%}%>
          <% } else{%>
          <div style="width: 100%; height: 100%; display: flex; justify-content: center; align-items: center;">
            <img src="assets/car.gif" alt="not found img">
          </div>
          <% } %>

        </div>
      </div>

      <div class="section resent-cars">
        <div class="section-header">
          <p class="section-name">Your Saved Cars</p>
          <a href="">View All</a>
        </div>
        <div class="cars">
          <div class="cars">
            <% if (cars.length > 0) { %>
            <% for( let index = 6; index < 10; index++ ) { %>
            <div class="car">
              <img src="<%=`data:image/webp;base64,${cars[index].data}`%>" alt="car image" class="car-image">
              <div class="car-description">
                <div class="car-details">
                  <p class="car-name"><%=`${cars[index].brand} ${cars[index].name}`%></p>
                  <span class="car-location">
                    <img src="assets/location.svg" alt="car location">
                    <p class="location-name"> Koforidua</p>
                  </span>
                </div>
                <div class="car-rating">
                  <span class="rating">
                    <img src="assets/rating.svg" alt="">
                    <img src="assets/rating.svg" alt="">
                    <img src="assets/rating.svg" alt="">
                    <img src="assets/rating.svg" alt="">
                    <img src="assets/rating.svg" alt="">
                  </span>
                  5.0
                </div>
                <div class="pricing">
                  <span class="price">GHC 245.00</span><span class="duration">/day</span>
                </div>
              </div>
              <div class="action">
                <button class="button button-filled">
                  View Details
                </button>
                <button class="icon-button icon-button--filled">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M3.11544 8.02607C3.20159 7.50361 3.37795 6.98115 3.6104 6.47461C5.00201 3.44215 8.95827 3.37934 11.6675 5.29632C11.8671 5.43753 12.1327 5.43753 12.3323 5.29632C15.0416 3.37934 18.9979 3.44215 20.3895 6.47461C20.6219 6.98115 20.7983 7.50361 20.8844 8.02607C22.0204 14.9158 14.4678 20 11.9999 20C9.53202 20 1.98019 14.9111 3.11544 8.02607Z" stroke="#363538" stroke-width="1.5" stroke-linejoin="round" />
                  </svg>
                </button>
              </div>
            </div>
            <%}%>
          <% } else{%>
            <div style="width: 100%; height: 100%; display: flex; justify-content: center; align-items: center;">
              <img src="assets/car.gif" alt="not found img">
            </div>
            <% } %>

          </div>
        </div>
      </div>

    </main>
  </section>

</body>

</html>